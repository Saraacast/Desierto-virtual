      <script>
        document.addEventListener('DOMContentLoaded', function() {
          const esfera = document.getElementById('esfera');
          const cielo = document.querySelector('a-sky');
          
          esfera.addEventListener('click', function() {
            // Cambiar el cielo a azul claro
            cielo.setAttribute('color', '#87CEEB');
            console.log('¡El cielo cambió a azul claro!');
            
            // Cambiar de vuelta al color original después de 2 segundos
            setTimeout(function() {
              cielo.setAttribute('color', '#0a1f4f');
            }, 2000);
          });
        });
      </script>
      
